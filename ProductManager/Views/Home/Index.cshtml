@{
    ViewData["Title"] = "Home Page";
}
@using ProductManager.Models.Entity
@model List<Product>
<div class="d-flex justify-content-end align-items-center">
    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Add">Yeni Ürün Ekle</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ürün Kodu</th>
            <th scope="col">Ürün Adı</th>
            <th scope="col">Ürün Fiyatı</th>
            <th scope="col">Stok</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td scope="row">@product.Id</td>
                <td scope="col">@product.Code</td>
                <td scope="col">@product.Name</td>
                <td scope="col">@product.Price</td>
                <td scope="col">@product.Stok</td>
                <td scope="col"> <a class="btn btn-info text-white" asp-controller="Home" asp-action="Update" asp-route-id="@product.Id">Güncelle</a> <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@product.Id">Sil</a> </td>
            </tr>
        }
        
    </tbody>
</table>
